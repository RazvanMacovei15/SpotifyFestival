<?xml version="1.0" encoding="UTF-8"?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<GridPane fx:controller="com.example.spotifyfestival.UIPackage.MainController"
          xmlns:fx="http://javafx.com/fxml" alignment="TOP_CENTER" hgap="20" vgap="20"
          fx:id="mainGridPane">

    <rowConstraints>
        <RowConstraints percentHeight="20"/>
        <RowConstraints percentHeight="80"/>
    </rowConstraints>

    <VBox fx:id="vBox" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" alignment="CENTER" spacing="20">
        <Button fx:id="topLists" GridPane.halignment="CENTER"
                text="USER TOP LISTS"
                minWidth="250"
                style="-fx-background-color: rgba(29, 185, 84, 1.0); -fx-text-fill: white; -fx-font-size: 26px"
                onAction="#onTopListsButtonClicked"/>
        <Button fx:id="festivals" GridPane.halignment="CENTER"
                text="THIS IS THE WAY"
                minWidth="250"
                style="-fx-background-color: rgba(29, 185, 84, 1.0); -fx-text-fill: white; -fx-font-size: 26px"
                onAction="#onGetFestivalSuggestionButtonClicked"/>
        <Button fx:id="admin" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER"
                text="ADMIN"
                minWidth="250"
                style="-fx-background-color: rgba(29, 185, 84, 1.0); -fx-text-fill: white; -fx-font-size: 26px"
                onAction="#handleDBButton"/>
    </VBox>
</GridPane>

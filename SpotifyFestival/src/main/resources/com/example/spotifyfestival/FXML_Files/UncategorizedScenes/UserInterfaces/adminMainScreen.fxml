<!--    </ImageView>-->

    <VBox GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.halignment="CENTER" alignment="CENTER" spacing="20">
        <Button GridPane.halignment="CENTER"
                text="See Top Lists"
                minWidth="300"
                style="-fx-background-color: rgba(29, 185, 84, 1.0); -fx-text-fill: white; -fx-font-size: 26px"
                onAction="#onTopListsButtonClicked"/>
        <Button GridPane.halignment="CENTER"
                text="Show me the way..."
                minWidth="300"
                style="-fx-background-color: rgba(29, 185, 84, 1.0); -fx-text-fill: white; -fx-font-size: 26px"
                onAction="#onGetFestivalSuggestionButtonClicked"/>
        <Button fx:id="DBButton" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.halignment="CENTER"
                text="DATABASE"
                minWidth="300"
                style="-fx-background-color: rgba(29, 185, 84, 1.0); -fx-text-fill: white; -fx-font-size: 26px"
                onAction="#handleDBButton"/>
    </VBox>
</GridPane>
